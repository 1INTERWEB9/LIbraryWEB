<div class="row d-flex justify-content-center align-items-center h-100 mb-4">
    {{#each book}}
    <div class="col-lg-2 col-xl-2">
        <div class="card text-white bg-dark">
            <img src="{{Cover}}" class="card-img-top mx-auto" alt="..." style="width: 150px; height: 150px">
            <div class="card-body">
                <h2 class="card-title">{{Name}}</h2>
                <p class="card-text">{{Summary}}</p>
                <div class="row d-flex justify-content-center align-items-center">
                    <div class="col">
                        <a href="#" class="btn btn-primary">Explorar</a>
                    </div>
                    {{#if ../user}}
                    <div class="col">
                        <a href="/books/edit/{{_id}}" class="btn" style="--bs-btn-color: rgb(29, 138, 228);"><i class="fas fa-edit fa-lg"></i></a>
                    </div>
                    <div class="col">
                        <form action="/books/delete/{{_id}}?_method=delete" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <button class="btn" type="submit" style="--bs-btn-color: rgb(29, 138, 228);"><i class="fa-solid fa-xmark fa-lg"></i></button>
                        </form>
                    </div>
                    {{else}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{else}}
    {{#if user}}
    <h3><center>No se encuentran libros registrados</center> </h3>
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <a href="/books/add" class="btn btn-danger btn-block">Registra un nuevo libro</a>
                        <p></p>
                    </div>
    {{/if}}
    
    {{/each}}
</div>
